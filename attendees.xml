<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/att_label"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/att_label2"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <AutoCompleteTextView
        android:id="@+id/att_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" >
    </AutoCompleteTextView>

    <Button
        android:id="@+id/att_get_num_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/att_get_number_button" />

    <Spinner
        android:id="@+id/att_num_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/att_add_contact_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/att_add_button" />

    <Spinner
        android:id="@+id/att_list_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/att_add_list_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/att_add_list_button" />

    <Button
        android:id="@+id/att_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/att_edit_list_button" />

     <TextView
        android:id="@+id/att_list_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/att_list_label" />
     
    <TextView
        android:id="@+id/att_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        
    <TextView
        android:id="@+id/att_remove_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/att_list_label" />
    
    <Spinner 
        android:id="@+id/att_rem_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    	
    	<Button
        	android:id="@+id/att_remove_button"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/att_rem_button" />
    	
    	<Button
        	android:id="@+id/att_clear_button"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/att_clear_button" />
    
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/att_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/att_set_button" />

        <Button
            android:id="@+id/att_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/button_Next" />

    </LinearLayout>
    
</LinearLayout>
