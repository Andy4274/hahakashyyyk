<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ByDay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/byday_label"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/byday_exp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <CheckBox
        android:id="@+id/byday_weeknoCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/byday_cb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Spinner
            android:id="@+id/byday_plusminus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:ems="1" />

        <Spinner
            android:id="@+id/byday_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:ems="3" />

        <Spinner
            android:id="@+id/byday_wkday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:ems="3" />

    </LinearLayout>

    <Button
        android:id="@+id/byday_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/byday_add" />

    <Button
        android:id="@+id/byday_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/byday_clear" />

    <TextView
        android:id="@+id/byday_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge" />
	
</LinearLayout>

